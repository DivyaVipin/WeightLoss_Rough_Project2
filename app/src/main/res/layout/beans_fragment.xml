<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgnd">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:textSize="20dp"
            android:text="Beans"
            android:textColor="@color/colorBlack"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/beanss"
            android:scaleType="center"
            android:id="@+id/beans"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="-->Some beans and legumes can be beneficial for weight loss.\n-->Some beans and legumes can be beneficial for weight loss.
            \n-->These foods tend to be high in protein and fiber, which are two nutrients that have been shown to lead to satiety\n-->They also tend to contain some resistant starch.\n-->The main problem is that a lot of people have problem tolerating legumes. For this reason, it is important to prepare them properly."
            android:textSize="15sp"
            android:textColor="@color/colorBlack"/>




    </LinearLayout>

</ScrollView>